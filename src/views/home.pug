doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body
        header
            h1 Noom
        main
            div#welcome
                form
                    label(for="welcome_name") Nickname
                    input(placeholder="Write your nickname", required, type="text", id="welcome_name")
                    label(for="welcome_room") Room Name
                    input(placeholder="Choose a room name", required, type="text", id="welcome_room")
                    Button Join / Create Room
            div#room
                h3 Room List (Total : 0)
                ul
            div#call(style="display: flex; flex-direction: row")
                div#video(style="flex: 1; display: flex; flex-direction: column")
                    div#myStream
                        h3#myName
                        video#myFace(autoplay, playsinline, width="400", height="400")
                        br
                        button#mute Mute
                        button#camera Turn Camera Off
                        button#exit Exit
                        select#cameras
                    div#peerStream
                        h3#peerName
                        video#peerFace(autoplay, playsinline, width="400", height="400")
                div#chat(style="flex: 1; display: flex; flex-direction: column")
                    ul#chatList
                    form#chatForm
                        input#chatInput(placeholder="Write a message", required, type="text")
                        button#chatSubmit Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")