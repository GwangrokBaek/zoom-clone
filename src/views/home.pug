doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body
        header
            h1 Noom
        main
            div#config
                form
                    label(for="config_nick") Your Nickname
                    input(value="", required, type="text", id="config_nick")
                    button Change
            div#welcome
                form
                    label(for="form_nick") Nickname
                    input(placeholder="write your nickname", required, type="text", id="form_nick")
                    label(for="form_room") Room name
                    input(placeholder="choose the room name", required, type="text", id="form_room")
                    button Join/Create Room
                h4 Open Rooms:
                ul
            div#room
                h3
                ul
                form#message
                    input(placeholder="write a msg", required, type="text")
                    button Send
                button#leave Leave
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")